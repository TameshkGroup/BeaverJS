{
    "compilerOptions": {
        "experimentalDecorators": true,
        "target": "ESNext",
        "useDefineForClassFields": true,
        "module": "UMD",
        "lib": ["esnext", "DOM"],
        "moduleResolution": "Node",
        "strict": true,
        "sourceMap": true,
        "esModuleInterop": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "baseUrl": ".",
        "paths": {
        },
        "outDir": "dist"
    },
    "exclude": ["node_modules/**"],
    "include": ["./index.ts"]
}
